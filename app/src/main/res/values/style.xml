    </style>
    <style name="DialogFragmentTheme" parent="ThemeOverlay.Material3.Dialog">
        <!-- Customize your DialogFragment theme here -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.dialog</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>
    <style name="ShapeAppearanceOverlay.dialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.pos.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.pos.TitleMedium</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.pos.button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.pos.tertiaryButton</item>
    </style>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
