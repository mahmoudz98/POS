        <item name="helperTextEnabled">true</item>
    </style>

    <style name="Widget.pos.TextInputLayout.OutlinedBox.Dense" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">

        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.pos.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.pos.BodySmall</item>
        <item name="hintTextColor">@color/md_theme_light_onSurface</item>


    </style>

    <style name="Widget.pos.CardView.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="Widget.pos.button" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>

        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="Widget.pos.Button.TextButton.icon" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="backgroundTint">@color/md_theme_light_onPrimary</item>

    </style>
