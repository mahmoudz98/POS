        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="backgroundTint">@color/md_theme_light_onPrimary</item>
        <item name="rippleColor">@color/md_theme_light_primary</item>
        <item name="iconTint">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.pos.secondaryButton" parent="Widget.pos.button">
